<h2>Burgers To Eat</h2>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    {{id}}
    {{burger_name}}
    <button class="eat" data-id="{{id}}">
      EAT ME!
    </button>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Devoured</h2>
<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    {{burger_name}}
    {{/if}}
    {{/each}}
</ul>

<div>
  <h2>Create A Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="newBurger">Burger Name:</label>
      <input type="text" id="newBurger" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>